@model IEnumerable<StudentManagementSystem.Models.DataSiswa>

@{
    ViewData["Title"] = "Data Siswa";
}
<div class="container mt-3">
    <div class="row mb-2">
        <div class="col-sm-6">
            <h2 class="mb-3">Dashboard</h2>
        </div>
        <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right bg-transparent">
                <li class="breadcrumb-item"><a asp-action="Index" class="text-black"><i class="bi bi-speedometer2 text-black"></i> Menu</a></li>
                <li class="breadcrumb-item active">Dashboard</li>
            </ol>
        </div><!-- /.col -->
    </div>
    <div class="row justify-content-center g-4">
        <!-- Siswa Laki-laki -->
        <div class="col-md-4 col-sm-8 col-12">
            <div class="info-box shadow bg-danger">
                <span class="info-box-icon bg-danger"><i class="bi bi-person-standing"></i></span>
                <div class="info-box-content">
                    <span class="info-box-text">SISWA LAKI-LAKI</span>
                    <span class="info-box-number text-lg">@ViewBag.TotalLaki</span>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-sm-8 col-12">
            <div class="info-box shadow bg-primary">
                <span class="info-box-icon bg-primary"><i class="bi bi-person-standing"></i><i class="bi bi-person-standing-dress"></i></span>
                <div class="info-box-content">
                    <span class="info-box-text">TOTAL SISWA</span>
                    <span class="info-box-number text-lg">@ViewBag.TotalGender</span>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-sm-8 col-12">
            <div class="info-box shadow bg-success">
                <span class="info-box-icon bg-success"><i class="bi bi-person-standing-dress"></i></span>
                <div class="info-box-content">
                    <span class="info-box-text">SISWA PEREMPUAN</span>
                    <span class="info-box-number text-lg">@ViewBag.TotalPerempuan</span>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card mt-4">
                    <div class="card-body">
                        <p>
                            <a asp-action="Create" asp-controller="Students" class="btn btn-success float-end mr-2">
                                <i class="bi bi-plus-lg"></i>
                                Tambah Siswa
                            </a>
                        </p>
                        <h3 class="my-3"><i class="bi bi-mortarboard-fill"></i> Tabel Siswa</h3>
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.NIM)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Nama)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TanggalLahir)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.JenisKelamin)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Alamat)
                                    </th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NIM)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nama)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TanggalLahir)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.JenisKelamin)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Alamat)
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.Id" asp-controller="Students">
                                                <i class="bi bi-pencil-fill btn btn-primary"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" asp-controller="Students">
                                                <i class="bi bi-x-lg btn btn-danger"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    @if (TempData["AlertMessage"] != null)
    {
        <script>
        Swal.fire({
            icon: 'success',
            title: 'Sukses!',
            text: '@TempData["AlertMessage"]',
            confirmButtonText: 'OK'
        });
        </script>
    }

    @if (TempData["AlertMessageAdd"] != null)
    {
        <script>
        Swal.fire({
            icon: 'success',
            title: 'Sukses!',
            text: '@TempData["AlertMessageAdd"]',
            confirmButtonText: 'OK'
        });
        </script>
    }

    @if (TempData["AlertMessageUpdate"] != null)
    {
        <script>
        Swal.fire({
            icon: 'success',
            title: 'Sukses!',
            text: '@TempData["AlertMessageUpdate"]',
            confirmButtonText: 'OK'
        });
        </script>
    }

    @if (TempData["AlertMessageDelete"] != null)
    {
        <script>
        Swal.fire({
            icon: 'success',
            title: 'Sukses!',
            text: '@TempData["AlertMessageDelete"]',
            confirmButtonText: 'OK'
        });
        </script>
    }
}