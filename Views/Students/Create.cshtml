@model StudentManagementSystem.Models.DataSiswa

@{
    ViewData["Title"] = "Create";
}

@*<h1>Create</h1>*@

<div class="card rounded-4 mt-3">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h4 class="mb-0">Tambah data siswa</h4>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="NIM" class="control-label"></label>
                        <input asp-for="NIM" class="form-control" autocomplete="off"/>
                        <span asp-validation-for="NIM" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Nama" class="control-label"></label>
                        <input asp-for="Nama" class="form-control" autocomplete="off"/>
                        <span asp-validation-for="Nama" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TanggalLahir" class="control-label"></label>
                        <input type="date" asp-for="TanggalLahir" class="form-control bootstrap-datetimepicker-widget" />
                        <span asp-validation-for="TanggalLahir" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="JenisKelamin" class="control-label"></label>
                        <select asp-for="JenisKelamin" class="form-control">
                            <option value="">--Pilih Jenis Kelamin--</option>
                            <option value="Laki-Laki">Laki-Laki</option>
                            <option value="Perempuan">Perempuan</option>
                        </select>
                        <span asp-validation-for="JenisKelamin" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Alamat" class="control-label"></label>
                        <input asp-for="Alamat" class="form-control" autocomplete="off"/>
                        <span asp-validation-for="Alamat" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary mr-2" />
                        <a asp-controller="Home" asp-action="Index" class="btn btn-warning">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
        </div>
    </div>


        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
